<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Design.PreviewWith>
		<Border Padding="20"
				CornerRadius="15" BorderThickness="5"
				Height="800" Width="1024">
			<StackPanel>
				<Label Content="Comic Font" FontFamily="{DynamicResource ComicFont}" FontSize="40"/>
				<Label Content="Header Font"  FontFamily="{DynamicResource SemiBoldFont}" FontSize="24"/>
				<Label Content="Body Font" FontFamily="{DynamicResource BodyFont}" FontSize="18"/>
				<Label Content="Caption Font"  FontFamily="{DynamicResource CaptionFont}" FontSize="14"/>
				<Label Content="Mono Font" FontFamily="{DynamicResource MonoFont}" FontSize="16"/>
				<Label Content="&#xe2c2;" FontFamily="{DynamicResource IconFont}" FontSize="16"/>
				<Label Content="&#xe2c2;" FontFamily="{DynamicResource IconFillFont}" FontSize="16"/>
			</StackPanel>
		</Border>
	</Design.PreviewWith>
	<!-- Add Resources Here -->
	<FontFamily x:Key="ComicFont">/Assets/Fonts/Bangers-Regular.ttf#Bangers</FontFamily>
	<FontFamily x:Key="MonoFont">/Assets/Fonts/SpaceMono-Regular.ttf#Space Mono</FontFamily>
	<FontFamily x:Key="SemiBoldFont">/Assets/Fonts/Poppins-SemiBold.ttf#Poppins SemiBold</FontFamily>
	<FontFamily x:Key="BodyFont">/Assets/Fonts/Poppins-Regular.ttf#Poppins</FontFamily>
	<FontFamily x:Key="ThinFont">/Assets/Fonts/Poppins-Thin.ttf#Poppins Thin</FontFamily>
	<FontFamily x:Key="IconFont">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
	<FontFamily x:Key="IconFillFont">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
</ResourceDictionary>
