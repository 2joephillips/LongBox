<Window x:Class="LongBox.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:LongBox.ViewModels"
        Title="LongBox"
		d:DesignWidth="1400"
		Width="1400"
		MinWidth="1400"
        d:DesignHeight="1200"
		Height="1200"
		MinHeight="1200"
        x:CompileBindings="True"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        mc:Ignorable="d"
	    >

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>


	<Border Background="{DynamicResource BackgroundBrush}">
		<Grid RowDefinitions="60,1*"  ColumnDefinitions="1*, 100" Margin="10">
			<StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="50" VerticalAlignment="Center" Margin="50,0">
				<TextBlock Text="LongBox" 
						   Foreground="{DynamicResource Brand}" 
						   FontFamily="{DynamicResource ComicFont}" 
						   FontSize="62"
						   Classes="primary"
						   HorizontalAlignment="Left"/>

				<StackPanel Spacing="15" Orientation="Horizontal">
					<IconButton IconText="&#xE0E6;" Content="Read" Classes="large nav" Command="{Binding OpenReaderCommand}"/>
				</StackPanel>
			</StackPanel>
			<StackPanel Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center">
				<IconButton Classes="icon-only xlarge primary" IconText="&#xE270;"/>
			</StackPanel>
			<TransitioningContentControl Grid.Row="1" Content="{Binding CurrentPage}" Grid.ColumnSpan="2"/>
		</Grid>
	</Border>

</Window>
